{% extends './base.html.j2' %}

{% block content %}
    <form action = "{{url_for('pokemon.search')}}" method="POST">
        <input type="search" class="form-control col-auto"
        placeholder="Search a Pokemon"
        name="search" />
        <input class="btn btn-primary col-auto" type="submit" value="Search">
    </form>
{% if poke %}
    <table class="table table-striped table-hover table-dark mt-5">
        <thead>
            <tr>
                <th scope="col">Pokemon</th>
                <th scope="col">Name</th>
                <th scope="col">ability</th>
                <th scope="col">defense</th>
                <th scope="col">attack</th>
                <th scope="col">HP</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><img src="{{ poke.sprite }}" alt="Pokemone Image"></td>
                <td>{{ poke.name }}</td>
                <td>{{ poke.ability }}</td>
                <td>{{ poke.defense }}</td>
                <td>{{ poke.attack }}</td>
                <td>{{ poke.HP }}</td>
            </tr>
        </tbody>
    </table>
    <form action = "{{url_for('pokemon.search')}}" method="GET">
        <input class="btn btn-primary col-auto" type="submit" value="Catch" name="catch">
    </form>
{% endif %}
{% endblock %}